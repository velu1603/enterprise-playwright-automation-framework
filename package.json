{
  "name": "enterprise-playwright-automation-framework",
  "version": "1.0.0",
  "description": "Playwright framework for API & Web automation",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "npx playwright test",
    "test:multiTab": "npx playwright test --grep @multiTab --headed --debug --project=chromium",
    "test:popUp": "npx playwright test --grep @popUp --headed --debug --project=chromium",
    "test:apiTest": "npx playwright test --grep @apiTest --project=chromium",
    "test:apiTestENV": "npx playwright test --grep @apiTest --project=API",
    "test:apiGetTest": "npx playwright test --grep @apiGet --project=chromium",
    "test:apiGetENV": "npx playwright test --grep @apiGet --project=API",
    "test:post": "npx playwright test --grep @POST --project=chromium",
    "test:smoke": "npx playwright test --grep @smoke --project=chromium",
    "test:regr": "npx playwright test --grep @regression --project=chromium",
    "test:encrpt": "npx playwright test --grep @encypt --project=chromium"
    
  },
  "keywords": [],
  "author": "Velan Chinnaiah",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.42.1",
    "@types/crypto-js": "^4.2.1",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "allure-commandline": "^2.27.0",
    "allure-playwright": "^2.14.1",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "csv-writer": "^1.6.0",
    "csvtojson": "^2.0.10",
    "dotenv": "^16.4.5",
    "moment-timezone": "^0.5.45",
    "winston": "^3.12.0"
  }
}
